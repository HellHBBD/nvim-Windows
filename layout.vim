"don't auto break line
set wrap
" set nowrap

"smooth horizontal scroll
set sidescroll=1

"auto indent
"set ai

"smart indent
"set si

"tab = n blank
set tabstop=4

"indent = n blank
set shiftwidth=4

"enable to delete indent, end of line, word before insert
set backspace=2

"disable temp file
set noswapfile

"when to show tab (0: never, 1: at least 2, 2: always)
set showtabline=2

"new at below
set splitbelow

"vnew at right
set splitright

"highlight search result
set hlsearch
